<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.mapper.UserEntityMapper">
    <!-- 解决表名与字段不匹配 -->
    <resultMap type="com.test.entity.UserEntity" id="BaseResultMap">
        <id property="id" column="USER_ID"/>
        <result property="userName" column="USER_NAME"/>
        <result property="userPwd" column="USER_PWD"/>
    </resultMap>

    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select * from  USERINFO
        WHERE  USER_ID = #{id}
    </select>

    <insert id="insertUser" parameterType="com.test.entity.UserEntity">
        insert into USERINFO (USER_ID,USER_NAME,USER_NAME) values (#{id},#{userName},#{userPwd});
    </insert>

</mapper>
